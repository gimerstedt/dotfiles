" set gdefault

set ignorecase
set tabstop=4
set shiftwidth=4
set number
set relativenumber
set cursorline
set wildmenu
set lazyredraw
set showmatch
set ignorecase
set smartcase
set showcmd
set list
set visualbell
set hlsearch
set incsearch
set scrolloff=5
set encoding=utf-8
set nobackup

let mapleader = ' '

" map <c-w> :q<cr>

imap jk <esc>

imap <c-k> <Up>
imap <c-j> <Down>
imap <c-l> <Right>
imap <c-h> <Left>

nmap <c-h> 0
nmap <c-l> $
nmap <esc> :noh<cr>
nmap <tab> :action VimWindowNext<cr>
nmap <s-tab> :action VimWindowPrev

nmap <leader>feR :source ~/.ideavimrc<cr>
nmap <leader>fed :e ~/.ideavimrc<cr>

nmap <leader>fs :action SaveAll<cr>
nmap <leader>qq :q<cr>
nmap <leader>gd :action GotoDeclaration<cr>
nmap <leader>fu :action FindUsages<cr>
nmap <leader>cv :action ChangeView<cr>
nmap <leader>br :action ViewBreakpoints<cr>
nmap <leader>ic :action InspectCode<cr>
nmap <leader>oi :action OptimizeImports<cr>
nmap <leader>l :action ReformatCode<cr>
nmap <leader>re :action RenameElement<cr>
nmap <leader>vsp :action MoveTabRight<cr>
nmap <leader>sp :action MoveTabDown<cr>

nmap H :action Back<cr>
nmap J :action NextTab<cr>
nmap K :action PreviousTab<cr>
nmap L :action Forward<cr>
